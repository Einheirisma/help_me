#
# /home/$USER/.config/kitty/kitty.conf
#

# [Include]
include ./theme/base16-gruvbox-material-dark-hard.conf

# [Fonts]
font_family                     Berkeley Mono
font_size                       13.0
disable_ligatures               cursor
modify_font                     cell_height 1.35
modify_font                     underline_thickness 1%
text_composition_strategy       platform

# [Text cursor customization]
cursor_shape                    block
cursor_shape_unfocused          block
cursor_blink_interval           0
cursor_trail                    10
cursor_trail_decay              0.01 0.05
cursor_trail_start_threshold    0

# [Mouse / Selection / URLs]
detect_urls                     yes
url_style                       none
copy_on_select                  no
strip_trailing_spaces           always

# [Terminal bell]
enable_audio_bell               no
window_alert_on_bell            no
bell_on_tab                     ""

# [Performance / Misc]
shell_integration               enabled

# [OS integration]
linux_display_server            wayland
wayland_enable_ime              no
allow_remote_control		yes
clipboard_control               write-clipboard read-clipboard
confirm_os_window_close         0

# [Window layout / UI]
hide_window_decorations         yes
tab_bar_style                   hidden

# [Keyboard shortcuts]
map Ctrl+Shift+C copy_to_clipboard
map Ctrl+Shift+V paste_from_clipboard

map Ctrl+0 change_font_size current 0
map Ctrl+Equal change_font_size current +1.0
map Ctrl+Minus change_font_size current -1.0
